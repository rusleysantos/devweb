    <% if (!postBack) { %>
    <div class="row">

      <div class="col-md-12 order-md-1">
        <form method="post" action="/clientes" class="needs-validation" novalidate>
          <div id="app">
            <h4>Olá Seja Bem-Vindo {{ nome }} {{ sobre }}</h4>
            <div class="row">
              <div class="col-md-6 mb-3">
                <label for="firstName">Nome</label>
                <input v-model="nome" name="nome" type="text" class="form-control" id="firstName" placeholder=""
                  value="" required>
                <div class="invalid-feedback">
                  O primeiro nome válido é obrigatório.
                </div>
              </div>
              <div class="col-md-6 mb-3">
                <label for="lastName">Sobrenome</label>
                <input v-model="sobre" type="text" name="sobre" class="form-control" id="lastName" placeholder=""
                  value="" required>
                <div class="invalid-feedback">
                  É necessário um sobrenome válido.
                </div>
              </div>
            </div>
          </div>

          <div class="mb-3">
            <label for="address">Email</label>
            <input type="text" name="email" class="form-control" id="email" placeholder="" required>
            <div class="invalid-feedback">
              Insira um endereço de e-mail válido para atualizações de envio.
            </div>
          </div>

          <div class="mb-3">
            <label for="address">Senha</label>
            <input type="password" name="senha" class="form-control" id="address" placeholder="" required>
            <div class="invalid-feedback">
              É necessário inserir sua senha
            </div>
          </div>

          <div class="mb-3">
            <label for="codigo">Código</label>
            <input type="text" name="codigo" class="form-control" id="codigo" placeholder="" required>
            <div class="invalid-feedback">
              É necessário inserir seu código
            </div>
          </div>

      </div>
    </div>

    <hr>
    <div class="row">
      <div class="col-md-6 mb-3">
        <div class="mb-3">
          <label for="address">CPF</label>
          <input type="text" name="cpf" class="form-control" id="address" placeholder="">
        </div>

      </div>
      <div class="col-md-6 mb-3">

        <div class="mb-3">
          <label for="address">RG</label>
          <input type="text" name="rg" class="form-control" id="address" placeholder="">
        </div>
      </div>
    </div>

    <div class="mb-3">
      <label for="address">Estado Civil</label>
      <select name="estadoCivil" id="sexo" class="form-control">
        <option value=""></option>
        <option value="1">Solteiro</option>
        <option value="2">Casado</option>
        <option value="3">Divorciado</option>
        <option value="4">Viúvo</option>
        <option value="5">Separado</option>

      </select>

    </div>

    <div class="mb-3">
      <label for="address">Sexo</label>
      <select name="sexo" id="sexo" class="form-control">
        <option value=""></option>
        <option value="m">Masculino</option>
        <option value="f">Feminino</option>
      </select>

    </div>

    <div class="mb-3">
      <label for="address">Telefone</label>
      <input type="tel" name="telefone" class="form-control" id="address" placeholder="">
    </div>

    <div class="mb-3">
      <label for="address">Data de Nascimento</label>
      <input type="date" name="nascimento" class="form-control" id="address" placeholder="">
    </div>


    <div class="mb-3">
      <label for="address">CEP</label>
      <input type="text" name="cep" class="form-control" id="address" placeholder="">
    </div>


    <div class="mb-3">
      <label for="address">Endereço</label>
      <input type="text" name="endereco" class="form-control" id="address" placeholder="">
    </div>

    <hr class="mb-4">
    <button class="btn btn-primary btn-lg btn-block" type="submit">Cadastrar</button>
    </form>


    <% } %>
    <% if (postBack) { %>
    <div class="row">
      <div class="col-md-12">


        <table class="table">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Nome</th>
              <th scope="col">Sobrenome</th>
              <th scope="col">Email</th>
              <th scope="col">Código</th>
              <th scope="col">CPF</th>
              <th scope="col">RG</th>
              <th scope="col">Estado Civil</th>
              <th scope="col">Sexo</th>
              <th scope="col">Telefone</th>
              <th scope="col">Data de Nascimento</th>
              <th scope="col">CEP</th>
              <th scope="col">Endereço</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <% for( let i = 0; i < lista.length; i++ ) { %>
